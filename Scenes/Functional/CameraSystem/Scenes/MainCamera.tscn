[sub_resource type="GDScript" id="GDScript_fus4w"]
resource_name = "CameraHackLogic"
script/source = "extends \"res://Scenes/Functional/Interactables/Hackable Devices/base_device.gd\"

const CAMERA_DISABLED_TIME = 5
func _ready() -> void:
	device_name = \"CCTV Camera\"
	$Sprite2D.texture = null
	
	
func sub_interact():
	if hackable and not hacked:
		print(\"Starting hack on device: \" + device_name)
		$\"../Timers/DangerTimer\".paused = true
		$\"../Timers/WarnTimer\".paused=true
		$\"../Timers/Timer\".paused = true
		$\"..\".beforeHackFrame = $\"..\".currentFrame
		$\"..\".beforeHackLoopback = $\"..\".loopback
		
		var hacking_ui = HackingMinigame.instantiate()
		get_tree().current_scene.add_child(hacking_ui)
		hacking_ui.initialize_minigame(self)
	

func on_hack_successful():
	hacked = true
	$\"..\".isCameraDisabled = 1
	print(\"Hacked from the CameraHackLogic\")
	$\"../Timers/DisabledTimer\".start(CAMERA_DISABLED_TIME)
	$\"../CameraSprites\".modulate.a = 0.3
	
	
	
	
"

